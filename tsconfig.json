{
  "compilerOptions": {
    "target": "es2017",
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}